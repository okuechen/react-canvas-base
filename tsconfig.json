{
    "compilerOptions": {
        "target": "ESNext",
        "module": "esnext",
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "declarationDir": "types",
        "emitDeclarationOnly": true,
        "jsx": "react-jsx",
        "strict": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "exclude": ["src/App.tsx", "vite.config.ts"]
}
